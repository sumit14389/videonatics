<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/local_ip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:background="@drawable/local_setting" />

        <EditText
            android:id="@+id/ip_address_local_edit_txt"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@color/golden"
            android:ems="10"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/wan_ip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/wan_setting" />

        <EditText
            android:id="@+id/ip_address_wan_edit_txt"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@color/golden"
            android:ems="10"
            android:paddingLeft="10dp" />

          <LinearLayout
              android:id="@+id/ip_address_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:gravity="center"
              android:orientation="vertical" >

              <Button
                  android:id="@+id/done_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:background="@drawable/done_select" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
